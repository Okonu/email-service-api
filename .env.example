# Application Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Email Configuration
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-app-password
EMAIL_RECIPIENT=recipient-email@example.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=NAME
DB_USERNAME=root
DB_PASSWORD=

# SSH Tunnel Configuration
USE_SSH_TUNNEL=true
SSH_HOST=127.0.0.1
SSH_PORT=22
SSH_USERNAME=root
SSH_PASSWORD=password
# SSH_PRIVATE_KEY_PATH=/path/to/your/private_key

# Frontend URLs
FRONTEND_URL=https://your-production-domain.com
ADDITIONAL_FRONTEND_URLS=https://staging.your-domain.com,https://dev.your-domain.com

# Application Details
APP_NAME=NAME

# Social Media Links
SOCIAL_TWITTER=https://twitter.com/NAME
SOCIAL_INSTAGRAM=https://instagram.com/NAME
SOCIAL_LINKEDIN=https://linkedin.com/company/NAME

# Security
RATE_LIMIT_WINDOW_MS=15
RATE_LIMIT_MAX_REQUESTS=100